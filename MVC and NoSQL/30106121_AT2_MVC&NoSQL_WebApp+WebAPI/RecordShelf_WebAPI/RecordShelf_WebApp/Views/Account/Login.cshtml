@model RecordShelf_WebApp.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>


<div class="form-card">
    <form asp-action="Login" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="EmailOrUsername" class="form-label"></label>
            <input asp-for="EmailOrUsername" class="form-control" />
            <span asp-validation-for="EmailOrUsername" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Log in</button>
    </form>

    <div class="mt-3">
        <a asp-controller="Account" asp-action="Register">Need an account? Register</a>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
